<div class="calculator">
    <ul id="people">
    {{#each this.listOfPeople key="@index" as |person index|}}
      <li tabindex=2 aria-label="{{person.name}}">
        {{person.name}}
        <button remove-person-button class="clear" aria-label="Delete {{person.name}} at index {{index}}" 
        onclick={{action clearArrayIndex index}}
        tabindex=2
        >-</button>
        <input
            class="number" 
            placeholder=0
            value={{current}}
            type="number"
            oninput={{action changeValue index}}
            aria-label="Add Purchase for {{person.name}}"
            tabindex=2
        >
      </li>
    {{/each}}
    </ul>
  </div>