{{#if this.currentUserBool}}
<div class="d-flex justify-content-end pdtp-50">
    <p class="pd-r-20 text-white">hello, {{getUserName}}</p>
    <span class="pd-r-20"><button type="button" class="btn btn-success btn-sm" {{on "click" signOut}}>Sign Out</button></span>
</div>
<InputExpenses/>
{{else}}
    {{#if this.signInBool}}
    <p class="d-flex justify-content-center pdtp-50 text-white">{{this.signInMessage}}</p><br> 
    <div class="d-flex justify-content-center">
        <div class="d-flex justify-content-center">
            <form class="container">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="User Name" value={{userName}} oninput={{action updateUserName}} required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" placeholder="Password" value={{password}} oninput={{action updatePassword}} required>
                </div>
                <div class="d-flex justify-content-center">
                    <span class="pd-r-20"><button type="button" class="btn btn-success btn-lg" {{on "click" signIn}}>Sign In</button></span>
                    <button type="button" class="btn btn-success btn-lg" {{on "click" setSignInFalse}}>Sign Up</button>
                </div>
            </form>
        </div>
    </div>
    {{else}}
    <SignUp @setSignInTrue={{this.setSignInTrue}}/>
    {{/if}}
{{/if}}

{{yield}}